<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />

            <gradient
                android:angle="270"
                android:startColor="@color/button_background_checked_color1"
                android:endColor="@color/button_background_checked_color2" />
            
            <corners android:radius="5dp" />

            <stroke android:width="1px" android:color="@color/button_stroke_color" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />

            <gradient
                android:angle="270"
                android:startColor="@color/button_background_focused_color1"
                android:endColor="@color/button_background_focused_color2" />
            
            <corners android:radius="5dp" />

            <stroke android:width="1px" android:color="@color/button_stroke_color" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />
            
            <gradient
                android:angle="270"
                android:startColor="@color/button_background_pressed_color1"
                android:endColor="@color/button_background_pressed_color2" />

            <corners android:radius="5dp" />

            <stroke android:width="1px" android:color="@color/button_stroke_color" />
        </shape>
    </item>
    
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp" />

            <gradient
                android:angle="270"
                android:startColor="@color/button_background_color1"
                android:endColor="@color/button_background_color2" />
            
            <corners android:radius="5dp" />

            <stroke android:width="1px" android:color="@color/button_stroke_color" />
        </shape>
    </item>

</selector>